{
  "manifest_version": 3,
  "name": "Picture-in-Picture any site",
  "description": "Picture-in-Picture any site even non video",
  "version": "0.4.1",
  "icons": {
    "16": "icons/icon16.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "tabCapture"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    },
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "src/content/index.tsx"
      ]
    }
  ]
}
